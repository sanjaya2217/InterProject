@model InterviewApp.Areas.Person.Models.PersonEntity
@{
    ViewBag.Title = "Person Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-controller="PersonDetails" asp-action="Index" method="post">
    <div class="outer_div">
        <div class="content">
            <div class="mb-3">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" asp-for="firstName" name="firstName" id="FirstName" required />
                <span class="text-danger" asp-validation-for="firstName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" asp-for="lastName" name="lastName" id="lastName" required />
                <span class="text-danger" asp-validation-for="lastName"></span>
            </div>
            <div class="mb-3">

                <button type="submit" class="btn btn-primary" name="btnSaveDetails">Save</button>
                <button type="reset" class="btn btn-secondary" name="btnReset" formnovalidate="formnovalidate">Reset</button>
            </div>
        </div>
    </div>
</form>

